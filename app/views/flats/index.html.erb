<div class="container">
  <h1>All our flats</h1>
  <div class="d-flex align-items-center p-2">
    <% @flats.each do |flat| %>
      <div class="card m-2">
        <div class="card-body">
          <div class="card-title"><h5><%= flat.name %></h5></div>
          <div class="mb-2"><%= flat.address %></div>
          <div class="d-flex">
            <div class="mr-2"><i class="fa fa-users"></i> <%= flat.number_of_guests %></div>
            <div class="ml-2"><i class="fa fa-credit-card"></i> <%= flat.price_per_night %></div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  </div>
